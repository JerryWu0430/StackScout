# ===========================================
# StackScout Backend Environment Variables
# ===========================================
# Copy to .env and fill in values

# -----------------------------
# Core Settings
# -----------------------------
DEBUG=true

# -----------------------------
# Database (Required)
# -----------------------------
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_KEY=eyJ...

# -----------------------------
# LLM - Primary (Required for analysis)
# -----------------------------
# Option A: LiteLLM proxy (recommended)
LITELLM_BASE_URL=http://localhost:4000
LITELLM_API_KEY=sk-xxx
LITELLM_MODEL=gpt-4o

# Option B: Direct OpenAI (fallback)
OPENAI_API_KEY=sk-xxx

# -----------------------------
# GitHub (Required for repo analysis)
# -----------------------------
GITHUB_TOKEN=ghp_xxx

# -----------------------------
# Discovery Sources (Optional)
# -----------------------------
# Product Hunt - get token at https://www.producthunt.com/v2/oauth/applications
PRODUCT_HUNT_TOKEN=

# Discovery sync schedule (cron, default: daily at 3am UTC)
DISCOVERY_SYNC_ENABLED=true
DISCOVERY_SYNC_HOUR=3

# -----------------------------
# Voice/Demo Features (Optional)
# -----------------------------
# ElevenLabs - voice synthesis
ELEVENLABS_API_KEY=
ELEVENLABS_AGENT_ID=

# Google Calendar - demo scheduling
GOOGLE_API_KEY=
GOOGLE_CALENDAR_CREDENTIALS=

# Twilio - phone calls (CallPilot)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Webhook URL (ngrok for local dev)
WEBHOOK_BASE_URL=http://localhost:8000
